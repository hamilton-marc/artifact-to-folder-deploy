# ~/.my_profile: Customized entries for me so we don't change the default .bashrc

# Add current directory to PATH
export PATH=".:$PATH"

# Add local bin dir to PATH
# (required for Zed editor)
export PATH=$PATH:$HOME/.local/bin

# - Pyenv Python version manager
export PYENV_ROOT="$HOME/.pyenv"

if [ -d "$PYENV_ROOT" ] ; then
    command -v pyenv >/dev/null || export PATH="$PATH:$PYENV_ROOT/bin"
    eval "$(pyenv init -)"
    eval "$(pyenv virtualenv-init -)"
fi

export PYCHARM_HOME=/opt/pycharm

if [ -d "$PYCHARM_HOME" ] ; then
    export PATH=$PATH:$PYCHARM_HOME/bin
fi

# - change default location for global node packages
# mkdir -p $HOME/.npm-global/bin
# export PATH="$PATH:$HOME/.npm-global/bin"
# export NPM_CONFIG_PREFIX=$HOME/.npm-global

# set PATH so it include manually installed applications
# - VIM
export PATH="$PATH:$HOME/.vimpkg/bin"

# Setup Node Version Manager
export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # This loads nvm
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"  # This loads nvm bash_completion

export ANDROID_STUDIO_HOME="$HOME/.local/android-studio"

if [ -d "$ANDROID_STUDIO_HOME" ] ; then
    export PATH=$PATH:$ANDROID_STUDIO_HOME/bin
fi

# Alias for bat https://github.com/sharkdp/bat
alias bat="batcat"

# Alias for fd: https://github.com/sharkdp/fd
alias fd="fdfind"

